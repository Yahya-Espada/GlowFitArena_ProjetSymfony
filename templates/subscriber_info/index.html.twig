{% extends 'baseYah.html.twig' %}

{% block title %}SubscriberInfo index{% endblock %}

{% block body %}
<div class="content-body">
    <div class="container-fluid">

        <!-- row -->

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Liste SubscriberInfo</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-md">
                                <thead>
                                <tr>

                                    <th>Id</th>
                                    <th>User Name</th>
                                    <th>Height</th>
                                    <th>Weight</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Goals</th>
                                    <th>ActivityLevel</th>
                                    <th>DietaryRestrictions</th>
                                    <th>FoodPreferences</th>
                                    <th>CreatedAt</th>
                                    <th>UpdatedAt</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for subscriber_info in subscriber_infos %}
                                    <tr>
                                        <td>{{ subscriber_info.id }}</td>
                                        <td>{{ subscriber_info.user.username }}</td>
                                        <td>{{ subscriber_info.height }}</td>
                                        <td>{{ subscriber_info.weight }}</td>
                                        <td>{{ subscriber_info.age }}</td>
                                        <td>{{ subscriber_info.gender }}</td>
                                        <td>{{ subscriber_info.goals }}</td>
                                        <td>{{ subscriber_info.activityLevel }}</td>
                                        <td>{{ subscriber_info.dietaryRestrictions }}</td>
                                        <td>{{ subscriber_info.foodPreferences }}</td>
                                        <td>{{ subscriber_info.createdAt ? subscriber_info.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ subscriber_info.updatedAt ? subscriber_info.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>
                                            <div class="d-flex">
                                            <a href="{{ path('app_subscriber_info_show', {'id': subscriber_info.id}) }}" class="btn btn-primary shadow btn-xs sharp me-1">
                                                <i class="bi bi-eye"> </i>
                                            </a>
                                            <a href="{{ path('app_subscriber_info_edit', {'id': subscriber_info.id}) }}" class="btn btn-primary shadow btn-xs sharp me-1">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="12">no records found</td>
                                    </tr>
                                {% endfor %}

                            </tbody>
                                <a href="{{ path('app_subscriber_info_new') }}" class="btn btn-primary">Create new</a>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

