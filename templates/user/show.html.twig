{% extends '/admin/base.html.twig' %}

{% block body %}
  <div class="content-body">
			<div class="container-fluid">
        <h1>Profil de {{ user.username }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Numero de téléphone</th>
                    <td>{{ user.numeroDeTelephone }}</td>
                </tr>
                <tr>
                <th>Role 
                </th>
                                <td>{{ user.role }}</td>
                             
                </tr>
                <tr>
                   <th>Mot de passe  
                </th>
                                <td>{{ user.motDePasse }}</td>
                                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Editer User</a>
    </div>
    </div>
{% endblock %}