{% extends 'baseYah.html.twig' %}

{% block title %}New DietaryProgramsCopy{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .card-header {
            border: none;
            padding-bottom: 0;
        }

        .card-header h2 {
            margin-top: 0;
            margin-bottom: 10px;
            font-size: 24px;
            color: #333;
        }

        .card-body {
            padding: 0;
        }

        .card-body .form-group {
            margin-bottom: 20px;
        }

        .card-body label {
            font-weight: bold;
            color: #333;
        }


        .card-body input[type="text"],
        .card-body input[type="email"],
        .card-body textarea {
            width: 100%; /* Adjust this value to fit your design */
            padding: 10px;
            border: 1px solid #5d9cec;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 5px;
            outline: none;

        }

        .card-body button[type="submit"] {
            width: auto;
            padding: 10px;
            background-color: #5d9cec;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .card-body button[type="submit"]:hover {
            background-color: #4a89dc;
        }

        .back-to-list {
            color: #5d9cec;
            text-decoration: none;
            margin-top: 10px;
            display: inline-block;
        }

        .back-to-list:hover {
            text-decoration: underline;
        }

        /* Add a class for the form and display container */
        .form-display-container {
            display: flex; /* Use Flexbox to layout the form and display side by side */
            justify-content: space-between; /* Add space between the form and display */
            gap: 20px; /* Add a gap between the form and display */
        }

        /* Add a class for the form */
        .form-container {
            flex: 1; /* Take up equal width as the display */
            /* Add any other styles you want for the form */
        }

        /* Add a class for the display */
        .display-container {
            flex: 1; /* Take up equal width as the form */
            /* Add any other styles you want for the display */
        }

    </style>
{% endblock %}


{% block body %}

<div class="row justify-content-center">
    <div class="col-xl-4 col-lg-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h1>Create a new Dietary Program</h1>
            </div>
            <div class="card-body" style="margin: inherit" >
                <a href="{{ path('app_dietary_programs_copy_index') }}" class="back-to-list">back to list</a>
                <div class="form-display-container">
                    <div class="form-container" style="margin-block-end: auto">
                          {{ include('dietary_programs_copy/_form.html.twig') }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
