{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Custom CSS Styles */
        body {
            font-family: Arial, sans-serif;
            padding-top: 70px; /* Add padding for the navbar height */
        }

        .container {
            margin-left: 250px; /* Adjust the value to create space for the sidebar */
            margin-top: 20px; /* Adjust the value to create space at the top */
        }

        h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        th {
            font-weight: bold;
            color: #666;
        }

        td {
            font-size: 14px;
            color: #444;
        }

        .btn {
            padding: 6px 12px;
            font-size: 12px;
            margin-right: 8px;
            display: inline-block; /* Make buttons inline */
        }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .btn-secondary:hover {
            background-color: #545b62;
        }

        .btn-info {
            background-color: #17a2b8;
            color: #fff;
        }

        .btn-info:hover {
            background-color: #138496;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-3">Reservation</h1>

        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ reservation.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Etat</th>
                    <td>{{ reservation.etat ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-info">Edit</a>
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
        </div>
    </div>
{% endblock %}

