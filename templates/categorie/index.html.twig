{% extends 'admin1/base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class=" align-items-center justify-content-start" style="margin-top:100px"> 
    <h1>Categorie index</h1>
    <div class=" align-items-center justify-content-start" style="margin-left:300px"> 
    <table class="table">
        <thead>
            <tr>
                <th>IdCategorie</th>
                <th>NomCategorie</th>
                <th>TypeCategorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.idCategorie }}</td>
                <td>{{ categorie.nomCategorie }}</td>
                <td>{{ categorie.typeCategorie }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'idCategorie': categorie.idCategorie}) }}" class="btn btn-success">show</a>
                    <a href="{{ path('app_categorie_edit', {'idCategorie': categorie.idCategorie}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
